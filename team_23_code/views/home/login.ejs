<html>
    <head>
        <title>Login - Mobile Dispatch Sever</title>
        <script type="text/javascript" src="/js/jquery-1.9.1.min.js"></script>
        <script type="text/javascript" src="/js/foundation.min.js"></script>
        <script type="text/javascript" src="/js/script.js"></script>
        <link rel="stylesheet" href="/styles/foundation.css">
        <link rel="stylesheet" href="/styles/styles.css">
    </head>
    <body>
        <div class="row header-box">
            <div class="large-12 small-12 columns">
                Mobile Dispatch Server
            </div>
        </div>
        <div class="large-12 small-12 columns clear-fix"></div>
        <div class="large-12 small-12 columns">
            <div class="large-4 small-8 large-offset-4 small-offset-2 columns login-box">
                <form method="post" action="/home/login">
                    <label class="large-12 small-12 columns sub-header">Login</label>
                    <div class="large-12 small-12 columns">
                        <input type="text" placeholder="Email" name="email"/>
                    </div>
                    <div class="large-12 small-12 columns">
                        <input type="password" placeholder="Password" name="password"/>
                    </div>
                    <div class="large-12 small-12 columns">
                        <input type="submit" value="Login" class="button tiny success"/>
                    </div>
                    <div class="large-12 small-12 columns">
                    <%
                        if(loginError != null) {
                            %>
                                <span class="label alert"><%= loginError %></span>
                            <%
                        }
                    %>
                    </div>
                </form>
            </div>
        </div>

        <script type="text/javascript">
            $(document).foundation();
        </script>
    </body>
</html>